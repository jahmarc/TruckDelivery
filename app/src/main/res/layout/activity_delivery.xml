<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_delivery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marc.truckdelivery.Delivery">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/client"
        android:id="@+id/spinnerClient"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerClient"
        android:text="@string/chauffeur"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/spinnerChauffeur" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextdeNumCourse"
        android:layout_below="@+id/spinnerChauffeur"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        tools:text="@string/num_ro_de_course"
        tools:ignore="LabelFor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/buttonDate"
        android:hint="@string/choisir_une_date"
        android:layout_below="@+id/editTextdeNumCourse"
        android:layout_centerHorizontal="true"
        android:onClick="showDatePickerDialog"
        tools:text="@string/choisir_une_date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextdeQte"
        android:layout_below="@+id/buttonDate"
        android:layout_alignStart="@+id/editTextdeNumCourse"
        android:layout_marginTop="11dp"
        tools:text="@string/quantit"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editTextdeQte"
        android:layout_alignEnd="@+id/editTextdeQte"
        android:layout_marginTop="11dp"
        android:id="@+id/editTextdeCondi"
        tools:text="@string/conditionnement"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editTextdeCondi"
        android:layout_alignStart="@+id/editTextdeCondi"
        android:layout_marginTop="11dp"
        android:id="@+id/editTextdeMar"
        tools:text="@string/marchandise"
        tools:ignore="LabelFor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttondSave"
        tools:text="@string/sauvegarder"
        android:layout_below="@+id/editTextdeMar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttondDelete"
        tools:text="@string/delete"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttondSave"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
