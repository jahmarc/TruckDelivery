<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marc.truckdelivery">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".LoginPage"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Customer"
            android:label="@string/client"
            android:parentActivityName=".LoginPage"/>
        <activity
            android:name=".Delivery"
            android:label="@string/livraisons"
            android:parentActivityName=".LoginPage"/>
        <activity
            android:name=".admin_page"
            android:parentActivityName=".LoginPage"/>
        <activity
            android:name=".dr_delivery"
            android:parentActivityName=".LoginPage"/>
        <activity
            android:name=".search_driver"
            android:parentActivityName=".admin_page"/>
        <activity
            android:name=".driver_page"
            android:parentActivityName=".LoginPage"/>
        <activity
            android:name=".Driver"
            android:parentActivityName=".LoginPage"/>
    </application>

</manifest>