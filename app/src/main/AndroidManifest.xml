<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marc.truckdelivery">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".LoginPage"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".admin_page"
            android:label="@string/admin_page"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".search_delivery"
            android:label="@string/search_delivery"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".search_customer"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".search_driver"
            android:label="@string/search_driver"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".Customer"
            android:label="@string/client"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".Delivery"
            android:label="@string/livraisons"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".Driver"
            android:label="@string/Driver"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".driver_page"
            android:label="@string/driver_page"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".dr_delivery"
            android:label="@string/dr_delivery"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity
            android:name=".DriverAdd"
            android:label="@string/DriverAdd"
            android:parentActivityName=".LoginPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marc.truckdelivery.LoginPage" />
        </activity>
        <activity android:name=".DeliveryAdd" />
        <activity
            android:name=".SearchableActivity"
            android:label="@string/search"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>